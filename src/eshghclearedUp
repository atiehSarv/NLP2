دگرگون
بابا
زمان
اهی
کشید
امروز
کافی
خستی
بگذار
شاگرد
ریش
قرمز
صدا
رختخوابت
اماده
برایت
شیر
ملحفه
تمیز
بیاورد
شمس
شنید
دوباره
نگاه
نفوذ
نگاهش
استخوانیم
احساس
نگاهش
دیوار
سوراخ
عبور
نگاهش
فقط
دیوار
عبور
جسمم
عبور
عمق
روحم
نفوذ
تمام
رازیم
انیی
خودم
وجودشان
بیخبر
بودم
دید
ترسی
دلم
چنگ
انداخت
شاید
جادوگر
ایا
فرشته
روت
امروت
شمس
تعلیم
داده
بودند
شاید
نیروی
دیگری
داشت
توانست
پشت
دیوار
ببیند
صورت
ترساند
خواهد
شاگرد
صدا
کنید
حسی
درونم
گوید
اطراف
صدایمان
شنود
حیرت
بیاختیار
دنم
صدایی
امد
ترس
جا
برخاستم
سمت
حیاط
دویدم
جا
چیزی
انتظارش
نداشتم
منتظرم
اشپز
جاروی
فراشی
حیاط
دنبالم
زد
جایی
توی
بد
دردسری
افتادی
اتشت
زنم
بیا
اینجا
فرار
نکن
عشق
لحظه
اخر
توانستم
دست
جارو
خودم
خلاص
حیاط
بیرون
بروم
تمام
قدرتم
راهرویی
راهروی
اصلی
خرج
خانقاه
وصل
دویدم
لحظه
صورت
شمس
ذهنم
پاک
کجا
فهمیده
جا
هستم
حتماً
مرد
جادوگر
بااینکه
فرسنگ
جا
دور
بودم
باز
نایستادم
کم
مانده
قلبم
حرکت
بایستد
دنم
خشک
انجایی
پایم
توان
داشت
سینم
تپید
دویدم
بوستون
خوابش
برده
بالای
سرش
گیلاس
خالی
شراب
اغوشش
کتاب
شریعت
عشق
دیوید
صبح
روز
بعد
وقتی
خانه
امد
وضع
دید
لحظی
خواست
بکشد
بعد
پشیمان
حمام
رفت
ده
پانزده
دقیقه
بعد
خواب
بیدار
شوهرش
خانه
دوش
گیرد
تعجب
نکرد
دیوید
ممکن
زنان
دیگری
ارتباط
ممکن
خانه
برود
همیشه
بدون
استثنا
حمام
خانه
خودشان
دوش
گرفت
تخت
دراز
کشید
صدای
اب
گوش
کمی
بعد
دیوید
حمام
بیرون
امد
چشمیش
بست
صورت
دیگر
مجبور
نبود
دیوید
بپرسد
دیشب
کجا
بوده
دیوید
مجبور
نبود
توضیح
چرا
دیشب
خانه
نیامده
تقریباً
ساعت
بعد
دیوید
بچه
خانه
بیرون
رفتند
دوباره
اشپزخانه
تن
ماند
رود
