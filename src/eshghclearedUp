
عشق
عشق
الیف
شافاک
عشق
مقدمه
سنگی
داخل
رودی
بیافتد
تاثیر
زیادی
رود
گذارد
اب
ارام
کنار
رود
موج
خیلی
کوچکی
سطح
اب
ایجاد
یکصدای
نامفهوم
گوش
رسد
صدای
سنگ
صدای
سرازیر
شدن
اب
گم
گوش
رسد
سنگ
داخل
برکه
بیفتد
اثرش
ماندگارتر
خواهد
وجود
سنگ
بیشتر
چشم
سنگ
اب
برکه
تکان
جایی
اب
برخورد
حلقه
وجود
اورد
حلقه
غنچه
باز
گل
گل
باز
بازتر
چشم
زدن
سنگ
کوچک
چهکار
تمام
سطح
اب
پخش
تمام
سطح
برکه
گرفتار
خود
درون
حلقه
حلقه
دیگری
متولد
اخرین
حلقه
لبه
برکه
برخورد
رود
شلوغی
جریان
تند
اب
عادت
دارد
رود
دنبال
بنی
لبریز
شدن
گردد
رود
لبریز
سنگ
درون
خودش
کشد
بلعد
بعد
بهراحتی
فراموش
شلوغی
ذات
رود
کم
زیاد
رود
فرقی
برکه
تلاطم
عادت
ندارد
فقط
سنگ
واژگون
کردن
زدن
ارامش
کافی
برکه
وقتیکه
سنگ
روبرو
دیگر
تواند
برکه
سابق
رابینستین
زمانی
خودش
شناخت
برکه
کمکم
چهلساله
مدت
عادتیش
خواستهیش
تمایلاتش
همه
یکجهت
بودند
روزیش
مسیر
همیشگی
گذشتند
روزیش
معمولی
مرتب
یکنواخت
یکسان
بودند
بخصوص
بیستساله
گذشته
تمامکاریش
کاری
ریز
بیاهمیت
زندگی
زناشوییاش
هماهنگ
سوراخی
عبور
دوست
جدیدی
پیدا
بیاهمیتترین
تصمیماتش
همیشه
اولویت
بازندگی
زناشوییاش
خانه
خانوادش
قطب
نمایی
زندگیاش
جهت
دادند
عشق
شوهرش
دیوید
دندانپزشک
معروف
شغلش
کاملاً
موفق
ثروتمند
رابطه
باید
عمیق
نبود
موضوع
دانست
دانست
ازدواجیی
ازدواج
سال
طول
کشد
اولویتی
مهمتری
وجود
دارد
گذشت
متقابل
مهربانی
درک
احترامصبر
البته
یکچیز
دیگر
زندگی
زناشویی
همه
مهمتر
بخشش
البته
دستتان
برمیاید
باید
بربیاید
شوهرتان
خطایی
حتماً
باید
ببخشید
عشق
عاشقی
اینطور
چیز
اصلاً
مهم
انچه
عشق
گویند
خیلی
وقت
اولویتی
جاری
رده
اول
رده
اخر
ازنظر
عشق
فقط
فیلم
رمانی
تخیلی
فقط
دختر
پسر
سر
حد
مرگ
یکدیگر
دوست
دارند
زندگی
زندگی
واقعی
فیلم
رمان
ابتدای
لیست
فرزندانش
بودند
دختر
زیبایش
جینته
دانشجو
دوقلو
ارلی
دخترش
اوی
پسرش
نوجوان
بودند
سگ
دوازدهساله
نژاد
گلدنرتریور
اسمش
سایه
وقتی
اولین
بار
سایه
خانهشان
اورده
بودند
توله
کوچک
روز
بعد
دوست
همیشگی
پیادهروییش
هرچند
دیگر
پیر
کمی
چاق
بینایی
