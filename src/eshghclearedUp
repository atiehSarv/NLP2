زن
شوهر
طوری
وانمود
کردند
انگار
هیچ
مسیلی
وجود
ندارد
واقع
رل
بازی
کردند
زمانی
تن
بودند
پارگی
ریسمان
بینشان
اشکار
گاهی
اوقات
دید
دیوید
کمال
حیرت
تعجب
نگاه
شاید
دیوید
خودش
پرسید
اخر
چطور
ممکن
زنی
نخواهد
بداند
شوهرش
شب
کجا
گذرانده
دیوید
پرسید
دانست
بعد
شنیدن
جواب
سوال
چکار
باید
بکند
چطور
باید
کنار
بیاید
جوابی
دانست
چکار
باید
بکند
چهکارش
امد
چقدر
کمتر
بداند
روح
قلبش
کمتر
ازرده
فکر
جلت
چیز
بدی
تن
اتفاقی
ممکن
سعادت
خوشبختی
دروغین
بین
ببرد
شب
سال
نو
قبل
اتفاق
افتاده
نامهی
رسیده
پاکت
پیداکرده
هتلی
نزدیکی
خانه
فرستاده
وقتی
باز
پرسشنامی
روبرو
مدیر
روابط
عمومی
هتل
ادرس
فرستاده
دیوید
رابینستین
پرسیده
ایا
اقامت
هتل
راضی
بوده
پاکت
نامه
ز
گذاشته
شب
وقتی
دیوید
نامه
خواند
دور
نگاه
بدون
حرفی
بزند
چیزی
بگوید
دیوید
حالی
نامه
دور
انداخت
انگار
کار
دیگری
ندارم
بیایم
پرسشنامه
پر
بعد
انگار
احساس
باید
توضیح
بیشتری
بدهد
سال
گذشته
هتل
بقیه
دندان
پزشک
کنفرانسی
برپا
بودیم
حتماً
لیست
مهمانان
کنفرانس
بشتباه
وارد
لیست
مسافران
باور
خواست
باور
خواست
اب
راکد
بزند
حرف
باور
بهطور
قطع
قانع
نشده
شکی
دلش
سایه
انداخته
درنیت
دفتر
تلفن
شماره
هتل
پیداکرده
رزرویشن
زنگ
زده
انچه
حدس
زد
درست
اب
امده
امسال
سال
قبل
هیچ
کنفرانسی
انجا
برگزار
نشده
خیانت
عشق
احساس
حقارت
پستی
احساس
گناه
ایجاد
دیگر
جوان
جذاب
عرض
شش
سال
گذشته
خیلی
چاق
کلاسی
اشپزی
هفته
رفت
لاغر
شدن
برایش
سختتر
البته
بودند
خانمیی
بهتر
غذا
پختند
بیشتر
خوردند
هیچوقت
چاق
شدند
وقت
یاد
دوران
کودکی
نوجوانیاش
افتاد
یاد
اورد
هیچ
گاه
عصیان
شورش
نکرده
