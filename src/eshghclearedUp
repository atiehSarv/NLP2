باشند
گل
صحرا
وارد
اتاق
شمس
دید
سمت
دوید
خواست
دستش
ببوسد
شمس
لبخند
زد
انگار
دوست
قدیمی
دیده
خوش
امدی
صفا
اوردی
امیدوارم
دیگر
انجا
برنگردی
فصل
زندگیات
همیشه
بسته
شاالله
خدا
تو
خودش
نزدیک
گل
صحرا
گریه
رییس
دست
سرم
برنمی
دارد
حتماً
حال
کله
شغال
دنبال
فرستاده
دانید
مرد
ظالمی
شمس
حرف
قطع
چیز
فکر
نکن
خدایی
تو
باتلاق
اورد
تو
جریت
جسارت
رویت
باز
اجازه
بیرون
بیایی
حتماً
ادامه
راه
تو
کمک
قانون
سی
سوم
دنیایی
همه
سعی
چیزی
شوند
تو
نابود
شو
هدف
تو
فنا
شدن
انسان
سفال
تفاوتی
ندارد
همانطور
فضای
خالی
درون
سفال
استوار
انچه
انسان
استوار
نگه
دارد
نیستی
اوست
هستی
شمس
شانهیش
تکان
کسی
خدا
ارزش
خب
خدا
ایمان
نداشته
باشیم
کسی
حضرت
رسول
عنایت
ندارد
خب
یعنی
ما
دوست
نداشته
باشیم
کسی
عشق
احترام
گذارد
ما
عاشق
نشویم
نفس
عمیقی
کشیدم
مرد
