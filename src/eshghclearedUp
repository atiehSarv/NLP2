فکر
خواهد
سیلی
بزند
نزد
دستش
هوا
ماند
بدون
صورتم
نگاه
داشتن
پسری
تو
خجالت
کشم
چشمانم
اشک
پر
صورتم
نبیند
سرم
چرخاندم
درست
لحظه
چشمم
کیمیا
افتاد
مقابل
اندرونی
ایستاده
کی
انجا
امده
چقدر
ما
نگاه
ایا
تمام
مشاجره
ی
ما
انت
شنیده
عشق
مقابل
دختر
مورد
علاقم
تحقیر
بودم
دلم
سوزشی
احساس
توانستم
بیشتر
انجا
بمانم
قبا
چکمه
برداشتم
شمس
سر
راهم
ایستاده
کناری
هل
دادم
جهنمی
گیر
بودم
بیرون
امدم
کیمیا
خانه
خانوادم
تمام
مشاجرات
بیمعنا
فرسنگ
دور
شمس
قونیه
فوریه
رومی
مرد
بدبینی
بعد
علاءالدین
رفت
چند
ساعت
هیچ
حرفی
نزد
باهم
حیاطی
پوشیده
برف
رفتیم
شب
سردی
اسمان
نقری
گرفته
چیزی
هوا
سنگین
راکد
جا
حیاط
ایستادیم
ابری
نقری
نگاه
کردیم
سکوت
ترسناکی
همه
جا
حاکم
باد
دوردست
بوی
عنبر
مشک
سیب
ی
خشک
ی
